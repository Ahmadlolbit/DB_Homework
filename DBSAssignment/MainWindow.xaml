<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login Form" Height="550" Width="850" Loaded="Main_Window_Loaded">
    <Grid>
        <Label
            Panel.ZIndex="2"
            Content="Welcome"
            Margin="302,148,302,320"
            FontFamily="Arial Black" FontSize="36"
            FontWeight="Bold"
            Foreground="Black"
            Background="{x:Null}"
            IsEnabled="False"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Width="auto" />
        <TextBox
            x:Name="userName"
            Margin="0,214,0,0"
            TextWrapping="Wrap"
            Panel.ZIndex="2"
            BorderBrush="White"
            FontFamily="Arial"
            FontSize="16"
            UseLayoutRounding="False"
            Cursor="IBeam"
            ToolTip="Username"
            Padding="5,0,0,0"
            KeyDown="userName_KeyDown"
            Foreground="#FFF9F2F2"
            Height="40"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="244">
            <TextBox.Background>
                <SolidColorBrush
                    Color="#FF0E0D0D"
                    Opacity="0.5" />
            </TextBox.Background>
        </TextBox>
        <PasswordBox
            x:Name="password"
            Margin="0,272,0,0"
            Panel.ZIndex="2"
            FontSize="16"
            FontFamily="Arial"
            BorderBrush="White"
            VerticalContentAlignment="Center"
            Cursor="IBeam"
            ToolTip="Password"
            KeyDown="password_KeyDown"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            AutomationProperties.HelpText="Password"
            AutomationProperties.IsColumnHeader="True"
            Password=""
            RenderTransformOrigin="0.509,-0.667"
            Foreground="#FFF9F5F5"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="244">
            <PasswordBox.Background>
                <SolidColorBrush
                    Color="Black"
                    Opacity="0.5" />
            </PasswordBox.Background>
        </PasswordBox>
        <Button
            x:Name="loginButton"
            Content="Login"
            Margin="418.516,323.521,317.484,153.979"
            Panel.ZIndex="2"
            BorderBrush="{x:Null}"
            UseLayoutRounding="False"
            Foreground="White"
            FontSize="22"
            FontFamily="Arial"
            FontWeight="Bold"
            Cursor="Hand"
            ToolTip="Click to login"
            Click="Button_Click"
            VerticalContentAlignment="Center">
            <Button.Background>
                <SolidColorBrush
                    Color="Black"
                    Opacity="1" />
            </Button.Background>
        </Button>
        <Image 
            Margin="582,222,238,275"
            Panel.ZIndex="3" 
            Source="Images/login_person.png" 
            RenderTransformOrigin="0.841,-0.85" />

        <Image 
            Margin="582,273,238,223" 
            Panel.ZIndex="3" Source="Images/login_password.png"
            RenderTransformOrigin="1.159,1.977" />

        <Image 
            Margin="-30,-1,0,-2" 
            Source="Images/wall-black-texture-background_785920-6.jpg" 
            Stretch="Fill" />

        <Image 
            Margin="282,130,0,128"
            Source="Images/vertical-white-watercolor-papar-texture-background-cover-card-design-overlay-aon-paint-art-background_1962-2192.jpg"
            Stretch="Fill" 
            HorizontalAlignment="Left" Width="352" />

    </Grid>
</Window>